{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: Debug (Auto Device)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "debug",
      "preLaunchTask": "Start Backend Server",
      "args": [
        "--dart-define=API_BASE_URL=http://10.0.2.2:8000"
      ],
      "console": "debugConsole",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Flutter: Android (Emulator - Local Server)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "emulator-5554",
      "flutterMode": "debug",
      "args": [
        "--dart-define=API_BASE_URL=http://10.0.2.2:8000"
      ],
      "console": "debugConsole",
      "cwd": "${workspaceFolder}"
    },
